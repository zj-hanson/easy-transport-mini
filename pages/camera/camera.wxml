<!--pages/camera/camera.wxml-->
<van-nav-bar title="获取信息" right-text="完成" bind:click-right="onClickRight" />
<van-grid column-num="3">
  <van-grid-item use-slot wx:for="{{fileList}}" wx:key="index" wx:for-item="item">
    <image style="width: 100%; height: 80px;" src="{{item.path ? item.path : item.url}}" />
  </van-grid-item>
</van-grid>
<camera device-position="back" flash="off" binderror="error" style="width: 100%; height: 300px;"></camera>
<view style="text-align:center;margin:10px 0px;">
  <van-button type="info" icon="photograph" round bind:click="takePhoto"></van-button>
</view>