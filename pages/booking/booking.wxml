<!--pages/booking/booking.wxml-->
<view class="container">
  <view class="card">
    <van-cell-group>
      <van-field label="查询日期" required value="{{queryDate}}" use-button-slot readonly bindtap='bindPickerDateTap'>
        <van-icon slot="button" name="search" />
      </van-field>
    </van-cell-group>
    <van-field label="查询公司" value="{{queryCompany}}" required readonly bindtap="bindQueryCompanyTap" use-button-slot>
        <van-icon slot="button" name="search" bindtap="bindQueryCompanyTap" />
      </van-field>
      <van-field label="查询地址" value="{{queryAddress}}" type="textarea" required autosize custom-style="height:80px" 
      bind:change="bindConsigneeAddressChange"/>
  </view>
  <van-calendar show="{{queryDateShow}}" first-day-of-week="{{ 1 }}" min-date="{{ minDate }}" max-date="{{ maxDate }}" 
  bind:close="onQueryDateCalendarClose" 
  bind:confirm="onQueryDateCalendarConfirm" />
  <van-action-sheet title="选择公司" show="{{ queryCompanyShow }}" actions="{{ addressOption }}" bind:close="onQueryCompanyClose" bind:select="onQueryCompanySelect" />
</view>